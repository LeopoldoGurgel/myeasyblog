<div style="display: flex; width: 100%;">
    <form id="login-form" class="box" style="width: 40%; height: 180px; flex: 1;">
        <h2 class="title is-3">Login</h2>
      <div>
        <label for="login-email">Email:</label>
        <input type="email" id="login-email" />
      </div>
      <div>
        <label for="login-password">Password:</label>
        <input type="password" id="login-password" />
      </div>
      <div>
        <button type="submit">Login</button>
      </div>
    </form>
  
  
    <form id="signup-form" class="box" style="width: 40%; height: 180px;flex: 1;">
        <h2 class="title is-3">Signup</h2>
      <div>
        <label for="signup-user">Username:</label>
        <input type="text" id="signup-user" />
      </div>
      <div>
        <label for="signup-email">Email:</label>
        <input type="email" id="signup-email" />
      </div>
      <div>
        <label for="signup-password">Password:</label>
        <input type="password" id="signup-password" />
      </div>
      <div>
        <button type="submit">Signup</button>
      </div>
    </form>
</div>
<script src="/js/login.js"></script>