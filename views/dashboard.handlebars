<section id="dashboard">
     <h2 class="title is-2">Welcome, {{name}}!</h2>

     {{#if posts.length}}
    <div id="post-div">
        <h2 class="title is-3">Your Posts:</h2>
    </div>
    {{/if}}
    
    <ul>
        {{#each posts}}
            <li class="box" style="display: flex; justify-content:space-between; color: white; background-color:blue">
                <a href="/post/{{id}}">{{title}}</a>, written on {{format_date date_created}}
                <div>
                <button id="delBtn" class="button is-small is-danger" data-id="{{id}}">Delete</button>
                </div>
            </li>
        {{/each}}
    </ul>
</section>
<section>
      <h2 class="title is-3">Create a New Post:</h2>
  <form class="new-post-form">
    <div class="field">
      <label class="label">Title</label>
      <div class="control">
        <input id="post-title" class="input" type="text" placeholder="Enter a title">
      </div>
    </div>
    <div class="field">
      <label class="label">Content</label>
      <div class="control">
        <textarea id="post-content" class="textarea" placeholder="Enter post content"></textarea>
      </div>
    </div>
    <div class="control">
      <button class="button is-primary">Create Post</button>
    </div>
  </form>
</section>
<script src="/js/dashboard.js"/>